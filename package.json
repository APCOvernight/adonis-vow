{
  "name": "adonis-vow-mocha",
  "version": "1.0.13",
  "description": "Mocha test runner for Adonis framework",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "standard": {
    "globals": [
      "use"
    ]
  },
  "keywords": [
    "mocha",
    "adonis",
    "test runner",
    "vow",
    "tdd",
    "bdd"
  ],
  "author": "Ian Egner <https://twitter.com/ianegner>",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ace": "^4.0.7",
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/sink": "^1.0.13",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^4.0.2",
    "japa-cli": "^1.0.1",
    "node-res": "^4.0.4",
    "nyc": "^11.2.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "chai-subset": "^1.6.0",
    "debug": "^3.1.0",
    "globby": "^6.1.0",
    "japa": "^1.0.5",
    "lodash": "^4.17.4",
    "macroable": "^1.0.0",
    "mocha": "^4.0.1",
    "node-cookie": "^2.0.2",
    "p-series": "^1.0.0",
    "superagent": "^3.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "providers",
      "bin",
      "test",
      "commands/RunTests.js"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APCOvernight/adonis-vow-mocha.git"
  },
  "bugs": {
    "url": "https://github.com/APCOvernight/adonis-vow-mocha/issues"
  },
  "homepage": "https://github.com/APCOvernight/adonis-vow-mocha#readme",
  "bin": {
    "adonis-vow-mocha": "index.js"
  }
}
